 {
  "builders": [{
    "type": "qemu",
    "iso_url": "{{user `mirror`}}/9.8.0/amd64/iso-cd/debian-9.8.0-amd64-netinst.iso",
    "iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "output_directory": "box/output-debian-9.8-amd64-{{build_type}}",
    "vm_name": "packer-debian-9.8-amd64",
    "disk_size": "{{user `disk_size`}}",
    "headless": "{{user `headless`}}",
    "http_directory": "http",
    "boot_wait": "5s",
    "boot_command": [
      "<esc><wait>",
      "auto ",
      "net.ifnames=0 ",
      "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/debian-9.8/preseed.cfg ",
      "<enter>"
    ],
    "ssh_timeout": "{{user `ssh_timeout`}}",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "shutdown_command": "sudo systemctl poweroff",
    "qemuargs": [
      ["-m", "{{user `memory`}}"],
      ["-smp", "{{user `cpus`}}"]
    ]
  }, {
    "type": "virtualbox-iso",
    "guest_os_type": "Debian_64",
    "iso_url": "{{user `mirror`}}/9.8.0/amd64/iso-cd/debian-9.8.0-amd64-netinst.iso",
    "iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "output_directory": "box/output-debian-9.8-amd64-{{build_type}}",
    "vm_name": "packer-debian-9.8-amd64",
    "disk_size": "{{user `disk_size`}}",
    "headless": "{{user `headless`}}",
    "http_directory": "http",
    "boot_wait": "5s",
    "boot_command": [
      "<esc><wait>",
      "auto ",
      "net.ifnames=0 ",
      "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/debian-9.8/preseed.cfg ",
      "<enter>"
    ],
    "ssh_timeout": "{{user `ssh_timeout`}}",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "shutdown_command": "sudo systemctl poweroff",
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
      ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
    ]
  }, {
    "type": "vmware-iso",
    "guest_os_type": "debian9-64",
    "iso_url": "{{user `mirror`}}/9.8.0/amd64/iso-cd/debian-9.8.0-amd64-netinst.iso",
    "iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "output_directory": "box/output-debian-9.8-amd64-{{build_type}}",
    "vm_name": "packer-debian-9.8-amd64",
    "disk_size": "{{user `disk_size`}}",
    "headless": "{{user `headless`}}",
    "http_directory": "http",
    "boot_wait": "5s",
    "boot_command": [
      "<esc><wait>",
      "auto ",
      "net.ifnames=0 ",
      "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/debian-9.8/preseed.cfg ",
      "<enter>"
    ],
    "ssh_timeout": "{{user `ssh_timeout`}}",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "shutdown_command": "sudo systemctl poweroff",
    "vmx_data": {
      "memsize": "{{user `memory`}}",
      "numvcpus": "{{user `cpus`}}"
    },
    "vmx_remove_ethernet_interfaces": true
  }],
  "provisioners": [{
    "type": "shell",
    "scripts": [
      "scripts/debian/virtualbox.sh",
      "scripts/debian-9.8/vmware.sh",
      "scripts/common/vagrant.sh",
      "scripts/common/sshd.sh",
      "scripts/debian/cleanup.sh",
      "scripts/common/minimize.sh"
    ]
  }],
  "post-processors": [{
    "type": "vagrant",
    "compression_level": "{{user `compression_level`}}",
    "output": "box/debian-9.8-amd64-{{.Provider}}.box"
  }],
  "variables": {
    "compression_level": "6",
    "cpus": "1",
    "disk_size": "10000",
    "headless": "false",
    "iso_checksum": "73bd56fb4548efa384bf32fd25808b99198f81c23cf19ab9e6507d898cd58dce",
    "iso_checksum_type": "sha256",
    "memory": "512",
    "mirror": "http://cdimage.debian.org/debian-cd",
    "ssh_timeout": "60m"
  }
}
